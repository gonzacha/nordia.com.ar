# ============================================
# NORDIA LANDING - VARIABLES DE ENTORNO
# ============================================
# Copiá este archivo como .env.local y completá los valores
# cp .env.example .env.local

# ============================================
# PÚBLICAS (visibles en el cliente)
# ============================================

# WhatsApp Business - Número para CTAs (formato: 549 + área + número, sin espacios ni guiones)
NEXT_PUBLIC_WA_PHONE=5493794281273

# Google Analytics 4 - Measurement ID (formato: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID=

# URL del sitio (para canonical URLs y Open Graph)
NEXT_PUBLIC_SITE_URL=https://nordia.com.ar

# ============================================
# PRIVADAS (solo servidor)
# ============================================

# MercadoPago - Public Key (para checkout, si aplica)
# Obtener en: https://www.mercadopago.com.ar/developers/panel/app
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=

# Email Service - API Key (Resend, SendGrid, etc.)
# Para formularios de contacto y notificaciones
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=founders@nordia.com.ar
EMAIL_TO_ADDRESS=founders@nordia.com.ar

# ============================================
# DESARROLLO (opcionales)
# ============================================

# Modo debug para analytics (loguea eventos en consola)
NEXT_PUBLIC_DEBUG_ANALYTICS=false

# Deshabilitar tracking en desarrollo
NEXT_PUBLIC_DISABLE_TRACKING=true
